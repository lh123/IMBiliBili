<?xml version="1.0" encoding="utf-8"?>
<com.lh.imbilibili.widget.ForegroundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_large_spacing"
    android:layout_marginRight="@dimen/item_large_spacing"
    android:layout_marginTop="@dimen/item_spacing"
    android:layout_marginBottom="@dimen/item_spacing"
    android:foreground="?selectableItemBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.lh.imbilibili.widget.ScalableImageView
        android:id="@+id/iv_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:aspectRadioHeight="1"
        app:aspectRadioWidth="1"/>

    <TextView
        android:id="@+id/tv_name"
        android:gravity="center"
        android:textSize="@dimen/text_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

</com.lh.imbilibili.widget.ForegroundLinearLayout>