<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <com.lh.imbilibili.widget.ForegroundLinearLayout
        android:id="@+id/follow_bangumi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_half_spacing"
        android:layout_weight="1"
        android:background="@drawable/shape_yellow_round_bg"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/item_half_spacing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_following_bangumi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_spacing"
            android:text="追 番"
            android:textColor="@color/white"/>
    </com.lh.imbilibili.widget.ForegroundLinearLayout>

    <com.lh.imbilibili.widget.ForegroundLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_half_spacing"
        android:layout_marginRight="@dimen/item_half_spacing"
        android:layout_weight="1"
        android:background="@drawable/shape_red_round_solid_bg"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/item_half_spacing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bangumi_calendar_6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_spacing"
            android:text="放送表"
            android:textColor="@color/white"/>
    </com.lh.imbilibili.widget.ForegroundLinearLayout>

    <com.lh.imbilibili.widget.ForegroundLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_half_spacing"
        android:layout_weight="1"
        android:background="@drawable/shape_blue_round_bg"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/item_half_spacing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bangumi_category"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_spacing"
            android:text="索 引"
            android:textColor="@color/white"/>
    </com.lh.imbilibili.widget.ForegroundLinearLayout>

</LinearLayout>