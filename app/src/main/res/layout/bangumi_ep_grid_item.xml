<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contianer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bangumi_ep_bg">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="44dp"
            android:minWidth="70dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/item_half_spacing"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="@dimen/item_half_spacing">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.App.Medium"
                android:textColor="@color/selector_text_black_selected_primary" />

            <TextView
                android:id="@+id/index_title"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:lines="2"
                android:maxLines="2"
                android:paddingTop="@dimen/item_half_spacing"
                android:textAppearance="@style/TextAppearance.App.Large"
                android:textColor="@color/selector_text_gray_selected_primary"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:contentDescription="@null"
        android:padding="4dp"
        android:src="@drawable/text_new"
        android:visibility="gone" />
</FrameLayout>