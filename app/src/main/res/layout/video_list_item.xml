<?xml version="1" encoding="utf-8"?>
<com.lh.imbilibili.widget.ForegroundRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackgroundBorderless"
    android:orientation="horizontal">

    <com.lh.imbilibili.widget.ScalableImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/cover_width"
        android:layout_height="wrap_content"
        app:aspectRadioHeight="10"
        app:aspectRadioWidth="16"/>

    <TextView
        android:id="@+id/pay_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cover"
        android:layout_alignTop="@+id/cover"
        android:background="#ffffa500"
        android:padding="2dp"
        android:text="付费观看"
        android:textAppearance="@style/TextAppearance.App.Small"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cover"
        android:layout_alignTop="@+id/cover"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/cover"
        android:orientation="vertical"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.App.Title"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:drawableLeft="@drawable/ic_category_up"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.App.Subtitle"
            android:textColor="?android:textColorSecondary"/>

        <LinearLayout
            android:id="@+id/info_group"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_views"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/ic_info_views"
                android:drawablePadding="4dp"
                android:minWidth="50dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:textColor="@color/gray_dark"/>

            <TextView
                android:id="@+id/info_danmakus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_half_spacing"
                android:layout_weight="0.6"
                android:drawableLeft="@drawable/ic_info_danmakus"
                android:drawablePadding="4dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:textColor="@color/gray_dark"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cover"
        android:layout_alignRight="@+id/cover"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/item_half_spacing"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape_black_trans_round_background"
        android:drawableLeft="@drawable/ic_category_comment"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingBottom="1dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="1dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.App.Small"
        android:textColor="@color/white"
        android:visibility="gone"/>
</com.lh.imbilibili.widget.ForegroundRelativeLayout>