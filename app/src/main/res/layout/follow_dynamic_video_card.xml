<?xml version="1.0" encoding="utf-8"?>
<com.lh.imbilibili.widget.CardFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <FrameLayout
                android:id="@+id/head_type"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/item_spacing">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_blue_solid_round_rect_bg"
                    android:padding="@dimen/item_half_spacing"
                    android:text="番剧"
                    android:textColor="@color/white"
                    android:visibility="visible"/>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_half_spacing"
                android:layout_marginTop="@dimen/item_spacing"
                android:layout_toRightOf="@+id/head_type"
                android:paddingTop="@dimen/item_half_spacing"
                android:textAppearance="@style/TextAppearance.App.Title"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_author_name"
                android:layout_marginLeft="@dimen/item_half_spacing"
                android:layout_marginTop="@dimen/item_half_spacing"
                android:layout_toRightOf="@+id/head_type"
                android:textAppearance="@style/TextAppearance.App.Subtitle"
                android:textColor="@color/gray_dark"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/item_spacing">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/item_half_spacing"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/item_spacing"
                android:layout_toRightOf="@+id/cover"
                android:paddingLeft="@dimen/item_half_spacing"
                android:paddingRight="@dimen/item_half_spacing"
                android:textAppearance="@style/TextAppearance.App.Title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/item_spacing"
                android:layout_toRightOf="@+id/cover"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/info_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_info_views"
                    android:drawablePadding="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.App.Small"
                    android:textColor="@color/gray_dark"/>

                <TextView
                    android:id="@+id/info_danmakus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_info_danmakus"
                    android:drawablePadding="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.App.Small"
                    android:textColor="@color/gray_dark"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</com.lh.imbilibili.widget.CardFrameLayout>