<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/head_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <LinearLayout
            android:id="@+id/layout_sort"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/theme_color_view_background"
            android:orientation="horizontal"
            app:layout_scrollFlags="enterAlways|scroll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_bangumi_index_separator">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_sort_hit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="追番人数"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"/>

                    <android.support.v4.widget.Space
                        android:layout_width="4dp"
                        android:layout_height="0dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_hit_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bangumi_index_sort_up"/>

                        <android.support.v4.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="1dp"/>

                        <ImageView
                            android:id="@+id/iv_hit_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bangumi_index_sort_down"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_sort_recent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="更新时间"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"/>

                    <android.support.v4.widget.Space
                        android:layout_width="4dp"
                        android:layout_height="0dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_recent_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bangumi_index_sort_up"/>

                        <android.support.v4.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="1dp"/>

                        <ImageView
                            android:id="@+id/iv_recent_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bangumi_index_sort_down"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_sort_day"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="开播日期"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"/>

                    <android.support.v4.widget.Space
                        android:layout_width="4dp"
                        android:layout_height="0dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_day_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bangumi_index_sort_up"/>

                        <android.support.v4.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="1dp"/>

                        <ImageView
                            android:id="@+id/iv_day_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bangumi_index_sort_down"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/theme_color_view_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_bangumi_index_separator"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_filter_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/ic_bangumi_index_close"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="类型"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_bangumi_index_separator"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_filter_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/ic_bangumi_index_close"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="风格"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_bangumi_index_separator"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_filter_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/ic_bangumi_index_close"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="状态"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_bangumi_index_separator"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center">

                <TextView
                    android:id="@+id/btn_filter_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/ic_bangumi_index_filter"
                    android:gravity="center"
                    android:text="筛选"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.lh.imbilibili.widget.LoadMoreRecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="12dp"
            android:orientation="vertical"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            android:verticalSpacing="14dp"/>

        <ImageView
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-40dp"
            android:gravity="center"/>

        <View
            android:id="@+id/mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bangumi_index_mask"
            android:visibility="gone"/>

        <GridView
            android:id="@+id/grid_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:background="@color/theme_color_window_background"
            android:horizontalSpacing="0dp"
            android:numColumns="5"
            android:paddingTop="@dimen/item_spacing"
            android:paddingBottom="@dimen/item_spacing"
            android:verticalSpacing="@dimen/item_medium_spacing"
            android:visibility="gone"/>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>