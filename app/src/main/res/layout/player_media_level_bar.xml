<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/vertically_bars_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:fitsSystemWindows="true"
                android:focusable="false"
                android:focusableInTouchMode="false">

    <LinearLayout
        android:id="@+id/volume_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="#ff000000"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        android:padding="4dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/volume_level"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="22dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxWidth="22dp"
            android:minWidth="22dp"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:progressDrawable="@drawable/progressbar_vertical"
            android:thumb="@null"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:contentDescription="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="5dp"
            android:src="@drawable/ic_volume_2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/brightness_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="#ff000000"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        android:padding="4dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/brightness_level"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="22dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxWidth="22dp"
            android:minWidth="22dp"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:progressDrawable="@drawable/progressbar_vertical"
            android:thumb="@null"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:contentDescription="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="5dp"
            android:src="@drawable/ic_brightness_2"/>
    </LinearLayout>
</RelativeLayout>