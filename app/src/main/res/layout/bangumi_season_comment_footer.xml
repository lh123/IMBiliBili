<?xml version="1.0" encoding="utf-8"?>
<com.lh.imbilibili.widget.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:id="@+id/more"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:foreground="?selectableItemBackground"
                                                 android:gravity="center_vertical"
                                                 android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_weight="1"
        android:background="@color/theme_color_dividing_line"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_half_spacing"
        android:text="更多评论 >>"
        android:textColor="@color/colorPrimary"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_weight="1"
        android:background="@color/theme_color_dividing_line"/>
</com.lh.imbilibili.widget.ForegroundLinearLayout>